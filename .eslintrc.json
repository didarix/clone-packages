{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      // "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],

          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/no-unused-vars-experimental": "error",
          "no-unused-vars": "off",
          "import/order": "error",
          "no-console": ["warn", { "allow": ["warn", "error"] }],
          "eqeqeq": ["error", "always"],
          "no-else-return": "error"

      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars-experimental": "error",
        "no-unused-vars": "off",
        "import/order": "error",
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "eqeqeq": ["error", "always"],
        "no-else-return": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars-experimental": "error",
        "no-unused-vars": "off",
        "import/order": "error",
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "eqeqeq": ["error", "always"],
        "no-else-return": "error"
      }
    }
  ]
}
